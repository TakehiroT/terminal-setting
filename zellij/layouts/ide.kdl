// IDE風レイアウト for Ghostty + Zellij + Yazi
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    // メインのコーディングタブ
    tab name="Code" focus=true {
        pane split_direction="horizontal" {
            // 上部: ファイルツリー (Yazi - ビルトインプレビュー有効)
            pane size="70%" name="files" focus=true {
                command "yazi"
            }
            // 下部: ターミナル
            pane size="30%" name="term"
        }
    }

    // Git操作タブ (lazygit)
    tab name="Git" {
        pane {
            command "lazygit"
        }
    }

    // Implementation タブ（Claude Orchestrator + Codex Reviewer）
    // Task toolでサブエージェントを並列実行
    tab name="Impl" {
        pane split_direction="horizontal" {
            // メインエリア (95%)
            pane size="95%" split_direction="vertical" {
                // 左側: Claude Orchestrator (70%) - exitで自動再起動
                pane size="70%" name="orchestrator" {
                    command "bash"
                    args "-c" "while true; do claude; echo '再起動中...'; sleep 1; done"
                }
                // 右側: Codex Reviewer (30%) - exitで自動再起動
                pane size="30%" name="reviewer" {
                    command "bash"
                    args "-c" "while true; do codex; echo '再起動中...'; sleep 1; done"
                }
            }
            // 下部ボタン (5%)
            pane size="5%" split_direction="vertical" {
                // スキル起動 (Enterで実行)
                pane name="trigger" start_suspended=true {
                    command "bash"
                    args "-c" "$HOME/.config/zellij/scripts/activate-skills.sh"
                }
                // リスタート (Enterで実行)
                pane name="restart" start_suspended=true {
                    command "bash"
                    args "-c" "$HOME/.config/zellij/scripts/cleanup-restart.sh"
                }
            }
        }
    }
}
