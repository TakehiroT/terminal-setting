// IDE風レイアウト for Ghostty + Zellij + Yazi
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    // メインのコーディングタブ
    tab name="Code" focus=true {
        pane split_direction="vertical" {
            // 左側: ファイルツリー (Yazi - プレビューなし)
            pane size="20%" name="files" focus=true {
                command "yazi"
            }
            // 右側: プレビュー/エディタ + ターミナル
            pane split_direction="horizontal" {
                // プレビュー/エディタ領域 (batでプレビュー → Enterでneovim)
                pane size="70%" name="preview"
                // ターミナル領域
                pane size="30%" name="term"
            }
        }
    }

    // Git操作タブ (lazygit)
    tab name="Git" {
        pane {
            command "lazygit"
        }
    }

    // Implementation タブ（Claude 4ペイン + Codex 1ペイン）
    // オーケストレーション用: 左2x2グリッドにClaude、右にCodex
    // Orchestratorが全ペインにスキルコマンドを順次送信
    tab name="Impl" {
        pane split_direction="vertical" {
            // 左側: Claude 2x2 グリッド (70%)
            pane size="70%" split_direction="horizontal" {
                // 上段
                pane size="50%" split_direction="vertical" {
                    pane size="50%" name="orchestrator" {
                        command "bash"
                        args "-c" "$HOME/.config/zellij/scripts/claude-orchestrator.sh"
                    }
                    pane size="50%" name="frontend" {
                        command "claude"
                        args "--dangerously-skip-permissions"
                    }
                }
                // 下段
                pane size="50%" split_direction="vertical" {
                    pane size="50%" name="backend" {
                        command "claude"
                        args "--dangerously-skip-permissions"
                    }
                    pane size="50%" name="test" {
                        command "claude"
                        args "--dangerously-skip-permissions"
                    }
                }
            }
            // 右側: Codex Reviewer (30%)
            pane size="30%" name="reviewer" {
                command "codex"
            }
        }
    }
}
