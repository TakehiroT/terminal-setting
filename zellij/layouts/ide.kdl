// IDE風レイアウト for Ghostty + Zellij + Yazi
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    // メインのコーディングタブ
    tab name="Code" focus=true {
        pane split_direction="horizontal" {
            // 上部: ファイルツリー (Yazi - ビルトインプレビュー有効)
            pane size="70%" name="files" focus=true {
                command "yazi"
            }
            // 下部: ターミナル
            pane size="30%" name="term"
        }
    }

    // Git操作タブ (lazygit)
    tab name="Git" {
        pane {
            command "lazygit"
        }
    }

    // Diff表示タブ (mainとの差分 + worktree切り替え)
    tab name="Diff" {
        pane name="diff-viewer" {
            command "bash"
            args "-c" "~/.local/bin/git-diff-viewer"
        }
    }

    // Implementation タブ（Claude Orchestrator + Codex Reviewer）
    // Task toolでサブエージェントを並列実行
    // Alt+m でアクションメニュー (Activate Skills, Restart, etc.)
    tab name="Impl" {
        pane split_direction="vertical" {
            // 左側: Claude Orchestrator (70%) - exitで自動再起動
            pane size="70%" name="orchestrator" {
                command "bash"
                args "-c" "while true; do claude; echo '再起動中...'; sleep 1; done"
            }
            // 右側: Codex Reviewer (30%) - exitで自動再起動
            pane size="30%" name="reviewer" {
                command "bash"
                args "-c" "while true; do codex; echo '再起動中...'; sleep 1; done"
            }
        }
    }

    // Monitor タブ（Vibe Coding用 - planモード出力をリアルタイム監視）
    tab name="Monitor" {
        pane name="plan-viewer" {
            command "bash"
            args "-c" "~/.config/zellij/scripts/plan-viewer.sh ./.spec"
        }
    }
}
