# Ghostty 設定
# https://ghostty.org/docs/config

font-family = "UDEV Gothic 35"
font-size = 13
font-feature = [ "-dlig" ]
macos-titlebar-style = tabs

background-opacity = 0.70
background-blur-radius = 20

theme = "Kanagawa Dragon"

cursor-style = "block"
cursor-style-blink = false

mouse-hide-while-typing = true

working-directory = home

# Clipboard / Copy & Paste
# Ensure macOS-like behavior and make selection copy automatically.
copy-on-select = true
keybind = performable:cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = shift+enter=text:\n

# Voice input (Dictation/IME)
# Prevent Ghostty from enabling macOS Secure Input automatically,
# which can block macOS voice input (dictation) or some IME inputs.
macos-auto-secure-input = false

# Enable shell integration with title feature
shell-integration = bash
shell-integration-features = title
